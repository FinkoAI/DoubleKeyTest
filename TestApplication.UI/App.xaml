<Application x:Class="TestApplication.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TestApplication.UI.Converters"
             xmlns:templateSelectors="clr-namespace:TestApplication.UI.TemplateSelectors"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Content/Templates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
            <templateSelectors:SearchTemplateSelector x:Key="SearchTemplateSelector" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
